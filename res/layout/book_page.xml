<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/book_page_bg_horizontal">
	
	<include layout="@layout/book_content"></include>
	
	
	<LinearLayout
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|left" 
		android:id="@+id/mDialogLayout">
		<TextView 
			android:id="@+id/mDialog"
			android:textSize="16sp"
			android:textColor="@drawable/white"
			android:background="@drawable/content_showpercent"
			android:padding="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="false"
			android:focusable="false"
			android:gravity="center"
			android:visibility="invisible"
		/>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/btnLightEnter"
		android:orientation="horizontal" android:layout_width="255dp"
		android:layout_height="100dp"
		android:layout_gravity="top|right" 
		android:layout_marginRight="55dp"
		android:layout_marginTop="45dp"
	    android:layout_weight="1" android:background="@drawable/content_btn_light_bg"
		android:visibility="gone">
		
		<SeekBar android:id="@+id/btnLightBar"
			android:progressDrawable="@drawable/sbr_light_color"
			android:thumb="@drawable/light_sbr_seek"
			android:max="255"
			android:visibility="visible" 
			android:layout_width="144dp" 
			android:layout_height="wrap_content" 
			android:layout_gravity="top|right" 
			android:layout_marginLeft="55dp"
			android:layout_marginTop="45dp"
			android:paddingLeft="10dp" android:paddingRight="11dp"/>

	</LinearLayout>

	<FrameLayout android:id="@+id/btnFontEnter"
		android:orientation="vertical" 
		android:layout_width="190dp"
		android:layout_height="250dp" 
		android:layout_gravity="top|right" 
		android:layout_marginRight="37dp"
		android:layout_marginTop="45dp"
		android:layout_weight="1" 
		android:background="@drawable/content_btn_font_enter"
		android:visibility="gone">
		<LinearLayout
			android:id="@+id/btnFontEnter1"
			android:orientation="horizontal"
			android:layout_gravity="top|left" 
			android:layout_width="190dp"
			android:layout_height="wrap_content" 
			android:layout_marginLeft="13dp"
			android:layout_marginTop="45dp"
			android:layout_weight="1"
			 >
			<Button android:id="@+id/btnFontEnterButtona"
					android:background="@drawable/btn_fontsmall_style"
					android:layout_gravity="top|left" 
					android:layout_marginLeft="10dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					/>
			<Button android:id="@+id/btnFontEnterButtonA"
					android:background="@drawable/btn_fontbig_style"
					android:layout_gravity="top|left" 
					android:layout_marginLeft="10dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/> 
		</LinearLayout>
			
		<LinearLayout
			android:id="@+id/btnFontEnter3"
			android:orientation="horizontal"
			android:layout_gravity="top|left" 
			android:layout_width="190dp"
			android:layout_height="100dp" 
			android:layout_marginTop="90dp"
			android:layout_marginLeft="13dp"
			android:layout_weight="1"
			>
			<Button android:id="@+id/btnFontEnterColorBlack"
					android:background="@drawable/btn_bgcolor_white_style"
					android:layout_gravity="top|left" 
					android:layout_marginLeft="10dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					/>
			<Button android:id="@+id/btnFontEnterColorBrown"
					android:background="@drawable/btn_bgcolor_brown_style"
					android:layout_gravity="top|left" 
					android:layout_marginLeft="10dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" ></Button>
		 	
			</LinearLayout>
			
			<FrameLayout
			android:id="@+id/btncharactorL"
			android:orientation="horizontal"
			android:layout_gravity="left|top" 
			android:layout_width="190dp"
			android:layout_marginTop="140dp"
			android:layout_height="190dp" 
			
			
			android:layout_marginLeft="13dp"
			android:layout_weight="1"
			>
			<Button android:id="@+id/btncharactor"
					android:background="@drawable/btn_charactor_style"
					android:layout_gravity="top|left" 
					android:layout_marginLeft="10dp"
					android:layout_marginTop="2dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					
					/>
			
			<ListView android:layout_width="120dp" android:id="@+id/charactorList"
				android:layout_height="110dp" 
				android:scrollbarStyle = "outsideInset"
				android:layout_marginLeft="20dp"
				android:layout_gravity="top|left" 
				android:layout_marginTop="4dp"
				android:cacheColorHint="@drawable/transparent" 
				android:visibility="gone"
				>
				
			</ListView>
			
			
			</FrameLayout>
			
			<FrameLayout
			android:id="@+id/framefont"
			android:orientation="horizontal"
			android:layout_gravity="left|top" 
			android:layout_width="190dp"
			android:layout_marginTop="190dp"
			android:layout_height="210dp" 
			
			
			android:layout_marginLeft="13dp"
			android:layout_weight="1"
			>
			<Button android:id="@+id/btnfontTTF"
					android:background="@drawable/btn_font_style"
					android:layout_gravity="top|left" 
					android:layout_marginLeft="10dp"
					android:layout_marginTop="2dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					
					/>
			
			<ListView android:layout_width="120dp" android:id="@+id/fontList"
				android:layout_height="110dp" 
				android:scrollbarStyle = "outsideInset"
				android:layout_marginLeft="20dp"
				android:layout_gravity="top|left" 
				android:layout_marginTop="4dp"
				android:cacheColorHint="@drawable/transparent" 
				android:visibility="gone"
				>
				
			</ListView>
			
			
			</FrameLayout>
			<!-- <LinearLayout android:id="@+id/btnSearch"
				android:orientation="vertical" 
				android:layout_width="120dp"
				android:layout_height="30dp" 
				android:layout_x="170dp"
				android:layout_y="30dp" 
				android:layout_weight="1" 
				android:background="#110000"
				android:visibility="gone">
				
				</LinearLayout>
				 -->
	</FrameLayout>
</FrameLayout>
