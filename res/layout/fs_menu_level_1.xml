<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/menu_level_1"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/fs_menu_backgound"
  android:orientation="vertical">
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/menu_level_1"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_weight = "1"
	  android:orientation="horizontal">
		<FrameLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
	  		>
			<ImageButton android:id="@+id/menu1"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_gravity="center"
				android:background="#00000000"
				android:src="@drawable/fs_menu_setting_style">
			</ImageButton>
			<TextView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:paddingBottom = "8dp"
				android:gravity="center_horizontal|bottom"
				android:textSize = "13dp"
				android:textColor="#ffffff"
				android:text="显示设置"
			>
			</TextView>
		</FrameLayout>
		<FrameLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
	  		>
			<ImageButton android:id="@+id/menu2"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_gravity="center"
				android:background="#00000000"
				android:src="@drawable/fs_menu_comment_style">
			</ImageButton>  
			<TextView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:paddingBottom = "8dp"
				android:gravity="center_horizontal|bottom"
				android:textSize = "13dp"
				android:textColor="#ffffff"
				android:text="批注"
			>
			</TextView>
		</FrameLayout>
		<FrameLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
	  		>
			<ImageButton android:id="@+id/menu3"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_gravity="center"
				android:background="#00000000"
				android:src="@drawable/fs_menu_bkmk_style">
			</ImageButton>  
			<TextView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:paddingBottom = "8dp"
				android:gravity="center_horizontal|bottom"
				android:textSize = "13dp"
				android:textColor="#ffffff"
				android:text="@string/mark_label"
			>
			</TextView>
		</FrameLayout>				
		<FrameLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
	  		>
	  		<ImageButton android:id="@+id/menu4"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_gravity="center"
				android:background="#00000000"
				android:src="@drawable/fs_menu_turnto_style">
			</ImageButton>
			<TextView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:paddingBottom = "8dp"
				android:gravity="center_horizontal|bottom"
				android:textSize = "13dp"
				android:textColor="#ffffff"
				android:text="页面跳转"
			>
			</TextView>
		</FrameLayout>	
		
	</LinearLayout>
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/menu_level_1"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_weight = "1"
	  android:orientation="horizontal">
		<FrameLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
	  		>
			<ImageButton android:id="@+id/menu5"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_gravity="center"
				android:background="#00000000"
				android:src="@drawable/fs_menu_booklist_style">
			</ImageButton>
			<TextView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:paddingBottom = "8dp"
				android:gravity="center_horizontal|bottom"
				android:textSize = "13dp"
				android:textColor="#ffffff"
				android:text="回到书库"
			>
			</TextView>
		</FrameLayout>
		<FrameLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
	  		>
			<ImageButton android:id="@+id/menu6"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_gravity="center"
				android:background="#00000000"
				android:src="@drawable/fs_menu_catalog_style">
			</ImageButton>  
			<TextView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:paddingBottom = "8dp"
				android:gravity="center_horizontal|bottom"
				android:textSize = "13dp"
				android:textColor="#ffffff"
				android:text="章节目录"
			>
			</TextView>
		</FrameLayout>	
				
	
		<FrameLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
	  		>
			<ImageButton android:id="@+id/menu7"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_gravity="center"
				android:background="#00000000"
				android:src="@drawable/fs_menu_theme_style">
			</ImageButton>  
			<TextView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:paddingBottom = "8dp"
				android:gravity="center_horizontal|bottom"
				android:textSize = "13dp"
				android:textColor="#ffffff"
				android:text="主题设置"
			>
			</TextView>
		</FrameLayout>	
			<FrameLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
	  		>
			<ImageButton android:id="@+id/menu8"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_gravity="center"
				android:background="#00000000"
				android:src="@drawable/fs_menu_pagemode_style">
			</ImageButton>  
			<TextView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:paddingBottom = "8dp"
				android:gravity="center_horizontal|bottom"
				android:textSize = "13dp"
				android:textColor="#ffffff"
				android:text="书页模式"
			>
			</TextView>
		</FrameLayout>	
	</LinearLayout>
</LinearLayout>