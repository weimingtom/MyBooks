<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ct_bklight"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom|right|center"
    android:gravity="center"
    android:layout_marginBottom="0dp"
    android:visibility="gone"
  >
    
    <LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/ct_menu_light_background"
		android:orientation="vertical"
	>
	
			  <LinearLayout
			  	  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:gravity="center"
				  android:layout_weight="1"
				  android:layout_gravity="center|top"
				  android:orientation="horizontal">
		  		<TextView
				  	android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:paddingTop="36dp"
					android:layout_gravity="center"
					android:textColor="#ffffff"
					android:textSize="18dp"
					android:text="亮度调节">
					</TextView>
			</LinearLayout>
    
    		<LinearLayout
			  	  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:gravity="center"
				  android:layout_gravity="center"
				  android:orientation="horizontal">
		  		<TextView
		  			android:id="@+id/ct_bklight_info"
				  	android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_gravity="center"
					android:textColor="#ffffff"
					android:textSize="18dp">
					</TextView>
			</LinearLayout>
    
    		<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="55dp"
					android:orientation="horizontal"
					>
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_gravity="center_vertical|right"
						android:gravity="right"
						android:src="@drawable/fs_bklight_decade">
					</ImageView>
					<SeekBar 
						android:id="@+id/ct_seebar_bklight" 
						android:layout_width="257dp"
						android:layout_height="29dp"
						android:paddingLeft="25dp"
						android:paddingRight="25dp"
						android:progressDrawable="@drawable/seekbar_img"
						android:thumb="@drawable/thumb" 
						android:layout_weight="2"
						android:layout_gravity="center"
						android:max="255"
						android:progress="18"
					>
					
					</SeekBar>
				
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_gravity="center_vertical|left"
						android:gravity="left"
						android:src="@drawable/fs_bklight_add">
					</ImageView>		
			
			</LinearLayout>
    
	
	</LinearLayout>
	
</LinearLayout>
